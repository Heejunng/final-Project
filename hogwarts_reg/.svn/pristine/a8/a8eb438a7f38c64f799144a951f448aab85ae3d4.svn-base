@charset "UTF-8";
	
	body {
		margin: 0
	}
	
    /* 전체 패널 박스(spw_box) */
	div#login_wrap {
		width: 100%;
		height: calc(100vh - 70px);
		/* 중앙정렬	*/
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	/* 좌측 박스 */
    div#spw_box {  
        width: 850px;
        height: 500px;        		
      	position: absolute;
		top: 172px;
		left: 375px;
        background: #E7E3DE;
		font-family: Nanum Gothic;
		border-top: 15px solid #522808;
    }  
 
	/* 로고 위치 조정 width: 370px */
	div#logo {
		padding: 100px 0 0 70px;
		/*background-color: orange;*/
		width: 300px;
		float: left;
	}
	
	/* 로고 */
	img#logo {
		width: 230px;
		height: 200px;
		align: left;
	}
	
	/* 우측 영역 */
	div#field_box {
		width: 480px;
		height: 500px;
		/* background-color: pink; */
		float: left;
	}

    /* 전송/로그인 버튼 */
    input.submit_btn {
        width: 420px;
        height: 40px;
        background-color: #522808;
        border: 0px solid #522808;
        font-size: 13pt;
        letter-spacing: 0.2em;          
        color: #fff; 
        padding-bottom: 7px;
		border-radius: 7px;
    }
	
	/* 찾기 버튼: 롤오버 효과 */
	input.submit_btn:hover {
		background-color: rgba(181,146,99,0.5);
		color: #fff;
	}	
 
    /* 학번/비밀번호 필드 */
    div#top_id_box {
		width: 530px;
		height: 120px;
	}
	
	/* 학번 입력 박스 */
	div#id_box {
		width: 530px;
		height: 70px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #522808;
	}
	
	/* 비밀번호 입력 박스 */
	div#name_box {
		width: 530px;
		height: 70px;
		color: #522808;
	}
	
	/* 이메일 입력 박스 */
	div#email_box {
		width: 600px;
		height: 70px;
		color: #522808;
	}
	
	
	
	/* 이메일 제공자 선택 */
	select#sid_sb_msv {
        width: 138px;
        height: 30px;
        font-size: 12pt;
        border: 1px solid #ccc;   
        text-indent: 1em;
        color: black;
		margin: 5px 0;
	}	


	/* 이메일 제공자 직접입력 
	input#sid_msv {
