    /* 학번/비밀번호 필드 */
    input#id {
        width: 310px;
        height: 30px;
        font-size: 12pt;
        border: 1px solid #ccc;   
        text-indent: 1em;
        color: brown;
		margin: 5px 0;
	}
	
	/* id name 필드 영역 */
	div#spw_box div[id$=_label] {
		width: 100px;
		float: left;
		height: 48px;
		text-align: right;
		padding-top: 12px;
		font-weight: bold;
	}
	
	div#spw_box div[id$=_field] {
		width: 430px;
		float: left;
		height: 60px;
		text-indent: 10px;
		text-align: left;
	}
		
	input#name {
        width: 310px;
        height: 30px;
        font-size: 12pt;
        border: 1px solid #ccc;   
        text-indent: 1em;
        color: brown;
		margin: 5px 0;
    }
	
	input#sid_mail{
        width: 150px;
        height: 30px;
        font-size: 12pt;
        border: 1px solid #ccc;   
        text-indent: 1em;
        color: brown;
		margin: 5px 0;
    }		
	

		
